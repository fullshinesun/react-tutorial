{
  "extends": ["tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "strict-boolean-expressions": false,
    "import-name": false,
    "jsx-wrap-multiline": false,
    "jsx-no-multiline-js": false,
    "max-line-length": [true, 300],
    "jsx-no-lambda": false,
    "align": [true, "parameters", "statements", "members"],
    "variable-name": [false],
    "no-boolean-literal-compare": true
  }
}
